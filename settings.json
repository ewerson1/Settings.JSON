// Configurações para deixar o VS mais clean: (settings.json)
// copie e cole ou altere


{
  "files.autoSave": "onFocusChange",
  "editor.fontFamily": "Consolas, 'Courier New', monospace",

  "diffEditor.wordWrap": "on",
  "workbench.startupEditor": "none",
  "emmet.includeLanguages": {
    "javascript": "",
    "php": ""
  },
  "editor.fontSize": 12,
  "editor.wordWrap": "on",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.linkedEditing": true,
  "security.workspace.trust.untrustedFiles": "open",
  "liveServer.settings.donotVerifyTags": true,
  "explorer.confirmDragAndDrop": false,
  "editor.fontLigatures": false,
  "explorer.confirmDelete": false,

  "cSpell.language": "pt-BR",
  "symbols.hidesExplorerArrows": false,
  "breadcrumbs.enabled": false,
  // barra lateral

  "editor.minimap.enabled": false,

  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  // font JetBrains
  "editor.fontfamily": "JetBrains Mono",
  "apc.font.family": "JetBrains Mono",
  "apc.listRow": {
    "height": 26
  },
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".pane-body": "padding: 8px",
    ".pane-header": "padding: 0 8px"
  },

  //  vetur
  "include": ["./src/*.ts", "./src/*.vue", "./src/*.ext"],
  // bagui pra botar dentro arquivos q depende de outro
  // "explorer.fileNesting.enabled": true

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  // prettier
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  //   barra lateral hiden
  "workbench.activityBar.location": "hidden",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.ignoreMissingGitWarning": true,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "material-icon-theme",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
        {
          "scope":[ 
            "variable",
            "variable.other",
            "variable.parameter",
            ],
            "settings": {
                "foreground": "#50B8FE" // Cor para variáveis (substitua pela cor desejada em formato hexadecimal)
            },
        },
        {
            "scope": "entity.name.function",
            "settings": {
                "foreground": "#e2f700" // Cor para funções (substitua pela cor desejada em formato hexadecimal)
            },
            
        },
        {
          "scope": "variable.other.readwrite",
          "settings": {
              "foreground": "#f070f9" // Cor para variáveis (substitua pela cor desejada em formato hexadecimal)
         }
        },
        {
          "scope": "support.type.property-name.json",
          "settings": {
              "foreground": "#bc8ef9" // Cor para as chaves (nomes de propriedades) em JSON
          }
        },
        
    ]
}

}

